@Article{Whitley2008a,
  author     = {Whitley, Elise and Gunnell, David and Davey Smith, George and Holly, Jeff M. P. and Martin, Richard M.},
  title      = {{C}hildhood Circumstances and Anthropometry: {T}he {B}oyd {O}rr Cohort},
