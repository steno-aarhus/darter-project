  file        = {Weinberg2007a - Epidemiology.pdf:Weinberg2007a - Epidemiology.pdf:PDF},
  keywords    = {Causal inference, Causality, Computer Graphics, Effect Modifier, Epidemiologic, Epidemiologic Methods, Models, Statistical},
