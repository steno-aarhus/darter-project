@Article{Eriksson2011,
  author     = {Eriksson, Johan G.},
  title      = {{E}arly Growth and Coronary Heart Disease and Type 2 Diabetes: {F}indings from the {H}elsinki {B}irth {C}ohort {S}tudy {(HBCS)}},
  journal    = {Am J Clin Nutr},
  year       = {2011},
  volume     = {94},
  number     = {6 Suppl},
  pages      = {1799S--1802S},
  issn       = {0002-9165, 1938-3207},
  abstract   = {** Printed ** A slow rate of intrauterine growth is a major risk factor for several common noncommunicable diseases, which include the following: coronary heart disease {(CHD)}, hypertension, and type 2 diabetes. Likewise, growth patterns in infancy and childhood have been identified as important factors linked to the pathogenesis of these disorders. In this overview, patterns of growth associated with {CHD}, type 2 diabetes, and related metabolic traits in adult life are presented on the basis of findings from the Helsinki Birth Cohort Study {(HBCS)} 1934 to 1944. Later risk of {CHD} was associated with small body size at birth and during infancy, followed by an increase in body size later in childhood. This pattern of growth has been associated with dyslipidemia in later life, which offers an explanation for the observed findings. Type 2 diabetes and {CHD} share several risk factors. The early growth of persons who later develop type 2 diabetes includes a small body size at birth as well as a small body size during infancy. An early age at adiposity rebound was associated with a markedly increased risk of type 2 diabetes in adulthood. The patterns of growth associated with type 2 diabetes are also associated with alterations in body composition, which predisposes to insulin resistance and the metabolic syndrome. The presented findings suggest that to be able to understand the pathogenesis of several noncommunicable diseases, the diseases need to be studied from a life-course perspective, and prenatal and childhood growth as well as adult characteristics need to be taken into account.},
  comment    = {Methods: Helsinki Birth Cohort, n=13,345, start=1934-1944. More detailed measures were taken from >2000 subjects, including OGTT, anthropometrics, blood markers. Results/Discussion: CHD - low weight at 1y increased CHD risk, independent of birthweight. Those with lowest birthweight and lowest BMI at 2y had greatest risk. Those with the lowest BMi at 2y but the highest BMI at 11y had greatest risk. Small at birth, small in infancy, large in later childhood highest risk. Small birthweight, plus slow growth during infancy has poor liver growth, seen in this cohort with subjects who took lipid lowering drugs had the lowest BMI at birth. Diabetes - small at birth incr risk of diabetes, IR, insulin secretion. Growth pattern similar to CHD. Higher incidence in those who had the weight rebound before 5y compared to having the weight rebound after 7y. Mechanism for the weight rebound is unknown. Early growth and body composition - low birthweight and low weight in infancy assoc with lower muscle mass. Fat mass and fat distribution were not consistently assoc with birthweight. Adult lean BMI positively assoc with more rapid gain in BMI from birth to 11y. Rapid gain til 2y increased adult lean mass but not fat accumulation. Rapid gain later in childhood had increase lean mass but also a greater increase in fat mass.},
  doi        = {10.3945/ajcn.110.000638},
  language   = {en},
  owner      = {luke},
  shorttitle = {Early growth and coronary heart disease and type 2 diabetes},
  timestamp  = {2012.10.19},
}

@Article{Li2011a,
  author    = {Li, Yanping and Jaddoe, Vincent W. and Qi, Lu and He, Yuna and Wang, Dong and Lai, Jianqiang and Zhang, Jian and Fu, Ping and Yang, Xiaoguang and Hu, Frank B.},
  title     = {{E}xposure to the {C}hinese Famine in Early Life and the Risk of Metabolic Syndrome in Adulthood},
  journal   = {Diabetes Care},
  year      = {2011},
  volume    = {34},
  number    = {4},
  pages     = {1014--1018},
  issn      = {1935-5548},
  abstract  = {**Printed** {OBJECTIVE} To examine whether exposure to the Chinese famine during fetal life and early childhood is associated with the risks of metabolic syndrome and whether this association is modified by later life environment. {RESEARCH} {DESIGN} {AND} {METHODS} We used data of 7,874 adults born between 1954 and 1964 from the 2002 China National Nutrition and Health Survey. Famine exposure groups were defined as nonexposed; fetal exposed; and early childhood, midchildhood, or late childhood exposed. Excess death rate was used to determine the severity of the famine. The {ATP} {III} criteria were used for the definition of metabolic syndrome (three or more of the following variables: elevated fasting triglyceride levels, lower {HDL} cholesterol levels, elevated fasting glucose levels, higher waist circumference, high blood pressure). {RESULTS} In severely affected famine areas, adults who were exposed to the famine during fetal life had a higher risk of metabolic syndrome, as compared with nonexposed subjects (odds ratio 3.13 [95\% {CI} 1.24-7.89, P = 0.016]). Similar associations were observed among adults who were exposed to the famine during early childhood, but not for adults exposed to the famine during mid- or late childhood. Participants who were born in severely affected famine areas and had Western dietary habits in adulthood or were overweight in adulthood had a particularly high risk of metabolic syndrome in later life. {CONCLUSIONS} Exposure to the Chinese famine during fetal life or infancy is associated with an increased risk of metabolic syndrome in adulthood. These associations are stronger among subjects with a Western dietary pattern or who were overweight in adulthood.},
  comment   = {Methods: Used APT III for MetS definition. Stat analysis, max likelihood by survey logistic regression. Interaction tested for famine exposure birth cohort and famine severity area. Adjusted by sex, SES, FH diabetes and hypertension, educational level, current smoking, alcohol use, phys act. Stratified by dietary pattern and BMI. Two sensitivity analysis: lower waist cutoff, and remove waist from MetS definition. Results: Severely affect by famine during gestation and early childhood increased risk of MetS. Having western style diet or high BMI greater increased prevalence of MetS in those severely affect by famine, especially in fetal and early childhood.},
  doi       = {10.2337/dc10-2039},
  keywords  = {Adult, Asian Continental Ancestry Group, China, Humans, Metabolic Syndrome X, Odds Ratio, Risk Factors, Starvation},
  owner     = {luke},
  timestamp = {2012.10.19},
}

@Article{Li2007,
  author        = {Li, L. and Dangour, A. D. and Power, C.},
  title         = {{E}arly Life Influences on Adult Leg and Trunk Length in the 1958~{B}ritish Birth Cohort},
  journal       = {Am J Hum Biol},
  year          = {2007},
  volume        = {19},
  number        = {6},
  pages         = {836--843},
  abstract      = {** Printed ** Objectives: Short leg length has been associated with increased disease risk. We investigated (1) whether taller childhood stature predicts longer adult leg than trunk length; (2) the effects of early life factors on adult leg/trunk length. Methods: We used data from the 1958 British birth cohort on height in childhood and at 45 years, leg and trunk length at 45 years and early life factors (n $\approx$ 5,900). Results: For a SD increase in height at 7 years, adult leg length increased more than trunk length (2.5-2.8 cm vs. 1.9 cm). Parental height had a stronger association with adult than childhood height, and leg than trunk length. Prenatal factors were associated with leg (maternal smoking) and trunk length (birth order); birth weight had a similar effect on leg and trunk lengths. Large family size, overcrowding, and social housing were more strongly associated with leg than trunk length: deficits in adult height (0.4-0.8 cm) were mostly due to shorter legs. Conclusions: Socio-economic adversity in childhood is associated with delayed early growth, shorter adult leg length, and stature. Leg length is the height component most sensitive to early environment. Studies of early life and adult disease could usefully assess adult leg length in addition to height. {\copyright} 2007 Wiley-Liss, Inc.},
  comment       = {Intro: Methods: 1958 birth cohort all born in england, wales, scotland in 1 week in march. n=17000, followed up at 7, 11, 16, 23, 33, 42, 45. at 45 years, n=9377. Height measured at 7, 11, 16, 33 and 42. At 45, leg length measured as well as height. Difference between 33 and 45 neglible, except for 30 individuals. Used 33 yrs as adult height, for all the rest is 45 yrs. Mothers height was recorded in 1958. Fathers height taken in 1969. Birthweight measured, birth order, maternal smoking. Infant feeding, social class, based on occupation of male head of household, nonmanual or manual. Large families >= 3, overcrowding >=1.5/rm, housing status renting/own or social housing. Divorce at age 7 recorded at 33 yrs from cohort members. Height, leg and trunk converted to sex-specific SD. Multivariate models, linear regression. Height at 7 was chosen as it is a measure of pre-pubertal growth when early environment is most influential. Adjusted for parental height, family size, birthweight, social class. For leg length, adjusted for trunk, vice versa. Male and female were combined, but adjusted by gender. leg and trunk measures available for 8,903. Results: Coefficient of variation was 5.6% for leg and 4.1% for trunk. Leg more correlated to height than trunk (r=0.83 & 0.85, m & f, r=0.73 & 0.76). Prepubertal height most strongly assoc with adult leg (P<0.001). Parental height more strongly associated with adult height than height at 7, and with adult leg than with trunk. Birthweight stronger assoc with adult then child height, similarly to leg and trunk. Birth order and maternal smoking stronger assoc with child height than adult. Later-born children were shorter in both child and adult heights. Maternal smoking = shorter offspring at child and adult ages: deficit in height entirely due to legs. Family size, overcrowding, housing tenure stronger influence on child height than on adult. Larger families, overcrowding, social housing = much shorter at 7 and shorter at adult, both height and leg more so than trunk. Breast feeding, social class, parental divorce not assoc with height after adjustment. Discussion: Taller prepubertal stature is assoc with longer legs than trunk in adulthood. Postnatal factors, ie: overcrowding, almost entirely due to leg (shorter in overcrowding). Parental height and birthweight more strongly assoc with adult than child height and parental height only with leg. Greater leg and trunk length assoc with advantaged circumstances. Leg length more sensitive to early life influences, such as family size, overcrowding, social housing. Prenatal growth affects height, but not necessarily components of height. Parental height strongly assoc with adult leg than turnk, potential intergenerational effect. Limitations: Childhood height components not recorded. Potential shrinkage due to age. Homogeneous population (british).},
  document_type = {Article},
  owner         = {luke},
  source        = {Scopus},
  timestamp     = {2018.08.01},
}

@Article{Skidmore2007,
  author    = {Skidmore, Paula M. L. and Hardy, Rebecca J. and Kuh, Diana J. and Langenberg, Claudia and Wadsworth, Michael E. J.},
  title     = {{L}ife Course Body Size and Lipid Levels at 53 Years in a {B}ritish Birth Cohort},
