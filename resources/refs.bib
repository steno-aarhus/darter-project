  file        = {Pearl2010b - Int J Biostat.pdf:Pearl2010b - Int J Biostat.pdf:PDF},
  keywords    = {Algorithms, Causal inference, Causality, Confounding Factors (Epidemiology), Humans, Models, Research Design, Statistical},
