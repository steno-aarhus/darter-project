@Article{Cameron2007,
  author    = {Cameron, No{\"e}l},
  title     = {{G}rowth Patterns in Adverse Environments},
  journal   = {Am J Hum Biol},
  year      = {2007},
  volume    = {19},
  number    = {5},
  pages     = {615--621},
  issn      = {1042-0533},
  abstract  = {**Printed** The triple-logistic pattern of human growth in linear dimensions is probably one of the most recognizable models within human biology. The fact that postnatal somatic growth occurs in three phases (infancy, childhood, adolescence) creates opportunities for the individual expression of this genetically directed, but environmentally modified, phenomenon. The impact of the environment works to alter the duration and intensity of critical stages within the total process resulting in individual patterns that can differ radically from the general pattern. However, the constancy of the general pattern is so fixed that its presence in children is taken as a reflection of good health. Departures from that pattern are recognized as reflecting ill health. While the cessation of growth in response to an acute attack is uniformly dramatic, the gradual response to chronic adverse stimuli is less easily predicted and interpreted. For example, in chronic scenarios the loss of centile position that precedes the eventual establishment of normal increments can be viewed as either a poor or a good growth response, as either maladaptive or adaptive, as either poor health or good health. This article reviews such growth patterns in urban South African children exploring the relationship between environment and growth outcome.},
  comment   = {Three stages of growth: infancy, childhood, adolescence. Each stage represents an early rapid growth followed by a plateau until the next stage. Rapid postnatal growth until about 5, slow down til 6, increasing until 8, slows until 10-12 years and continues until cessation of growth. Those with low birthweight grow rapidly, those with higher birthweight grow slower. Very rapid growth until 2 years of age associated with greatest risk for chronic disease. Rapid growth outside of the expected is associated with chronic disease. Weight is eco-sensitive, while length is more responsive to chronic conditions of growth. Intrauterine growth restrictions (IUGR) or poor fetal conditions may lead to a positive response of reducing overall growth to adequately develop neural and vital tissue. Similarly rapid growth in infancy following IUGR may be viewed as positive given the IUGR and the infants need to grow. However, too much growth may be a bad thing. The earlier and greater the adipose rebound (significant increase in fat/BMI), the higher the risk for disease. Transition economies seeing children who are stunted as well as overweight. Born small and very rapid growth had greater glucose intolerance and insulin resistance.},
  doi       = {10.1002/ajhb.20661},
  keywords  = {Adipose Tissue, Adolescent, Body Mass Index, Child, Child Development, Child, Preschool, Environment, Growth Disorders, Human Development, Humans, Infant, Infant, Newborn, South Africa, Urban Population},
  owner     = {luke},
  timestamp = {2012.03.30},
}

@Article{Frisancho2007,
  author     = {Frisancho, A. Roberto},
  title      = {{R}elative Leg Length As a Biological Marker to Trace the Developmental History of Individuals and Populations: {G}rowth Delay and Increased Body Fat},
  journal    = {Am J Hum Biol},
  year       = {2007},
  volume     = {19},
  number     = {5},
  pages      = {703--710},
  issn       = {1042-0533},
  abstract   = {**Printed** The purpose of this study was to determine whether differences in leg length index are related to differences in body fat. The study included a cross-sectional sample of 21,021 subjects ranging in age from 2 to 90 years who had anthropometric information and poverty income ratio that participated in the third National Health and Nutrition Survey {(NHANES} {III)} of the United Stated conducted during 1988-1994. Of the total 21,021 participants, 7,810 were {non-Hispanic} white (3,900 men and 3,910, women), 8,134 were {African-American} black (3,127 men and 2,889 women) and 6,237 were {Mexican-American} (3,221 and 3,016 women). In both males and females and in all three ethnic groups and across socio-economic status (measured by the poverty income ratio) a low leg length index is associated with increased body fat (measured by skinfold thickness) when compared with those with high leg length index. It is postulated that a low leg length index reflects the consequence of negative environmental conditions leading to growth delay. Previous studies indicate that individuals exposed both during development and adulthood to under-nutrition respond through inter-related physiological mechanisms oriented at improving energetic efficiency and low oxidation of fat. These interrelated compensatory physiological adjustments work together to promote fat storage among growth delayed individuals or populations.},
  comment    = {methods: nhanes 3, ethnic diverse, leg length index (z-score), poverty income ratio (SES) results: low leg length index associated with more fat},
  doi        = {10.1002/ajhb.20676},
  keywords   = {Adipose Tissue, Adolescent, Adult, African Americans, Aged, Aged, 80 and over, Age Distribution, Biological Markers, Body Weights and Measures, Child, Child, Preschool, {Cross-Sectional} Studies, European Continental Ancestry Group, Female, Growth Disorders, Human Development, Humans, Leg, Male, Mexican Americans, Middle Aged, Socioeconomic Factors, United States},
  owner      = {luke},
  shorttitle = {Relative leg length as a biological marker to trace the developmental history of individuals and populations},
  timestamp  = {2012.03.01},
}

@Article{Wadsworth2002,
  author        = {Wadsworth, M. E. J. and Hardy, R. J. and Paul, A. A. and Marshall, S. F. and Cole, T. J.},
  title         = {{L}eg and Trunk Length at 43 Years in Relation to Childhood Health, Diet and Family Circumstances; {E}vidence from the 1946 National Birth Cohort},
  journal       = {Int J Epidemiol},
  year          = {2002},
  volume        = {31},
  number        = {2},
  pages         = {383--390},
  abstract      = {** Printed ** Background. This is a study of the associations of adult leg and trunk length with early life height and weight, diet, socioeconomic circumstances, and health, and parental height, divorce and death. Method. The data used were collected in a longitudinal study of the health, development and ageing of a British national birth cohort (N = 2879 in this analysis) studied since birth in 1946. Multiple regression models were used to investigate the relationships. Results. Adult leg and trunk length were each positively associated with parental height, birthweight, and weight at 4 years. Leg length was associated positively with breastfeeding and energy intake at 4 years. Trunk length was associated negatively with serious illness in childhood and possibly also parental divorce, but not with the dietary data. Conclusion. Adult leg length is particularly sensitive to environmental factors and diet in early childhood because that is the period of most rapid leg growth. Trunk growth is faster than leg growth after infancy and before puberty, and may be associated with the effects of serious illness and parental separation because of the child's growing sensitivity to stressful circumstances, as well as the result of the biological effects of illness.},
  comment       = {Intro: Methods: Medical research council national survey of health and development, social class stratified sample of 5362 of all single, legitimate births in England, Wales and Scotland from 3-9 march 1946. Last visited at 43 yrs, n=3262. Leg and trunk length, derived from sitting height. Birthweight recorded by midwive or obstetrician or taken from records by health visitors. Height and weight were taken at 4, 7, 11, 15. Parental height: mothers taken when child was 6, fathers was reported by mother. Breastfeeding reported by mother when child was 2. Nutrients were coded based on mothers 24 hr recall. Some nutrients associated with bone matrix, etc (used energy of prot, fat, carb, Ca, P, Mg, Zn, Fe, vit A, C, E, thiamin, riboflavin, niacin. Child illness reported by mother, only serious if lasted longer then 3 months in any one year or one month in hospital between birth and 59 months. Reports of admission were checked with hospital records. SES was based on fathers occupation when child was 4 (manual and non-manual), overcrowding (>=2/rm). Parental seperation/death by age 6 was recorded. Leg and trunk were converted to z-scores, as well as a variable for the difference between leg and trunk z-scores. Energy intake and weight were natural logged and times by 100 to interpret the beta-coeff as a change per one percent. No interaction of sex, so sexes were combined. Age 4 used because diet info was taken then and because it is an early stage of growth. Results: leg > in men. Low correlation of leg to trunk (.1). Leg and trunk were pos assoc with parental height, greater for leg. Birthweight pos assoc with both components of ht. Non-manual social class > leg and trunk, greater for leg. Not breastfed < leg and trunk, considerably stronger for leg. Energy intake assoc with leg and trunk, stronger for leg. Adjust for energy intake, leg assoc with all nutrients, esp vit a, c, riboflavin, niacin, trunk assoc with vit c and e. Serious illness < trunk and leg, greater for trunk. Divorce < trunk, not leg. After adjusting for parent height, birthweight, SES, crowding, breastfeeding, and illness, no nutrient remained significant. SES, crowding, parent height accounted for reduction, so likely nutrients are a proxy for SES. Fathers SES and crowding were confounded, so SES was kept. Leg and nutrition was confirmed to be signif assoc (both breastfeed & energy intake). Parent height, birthweight and weight at 4 were all assoc independ with leg. Adjusting for height and weight at 4, fathers SES no longer signif. Height at 4 accounted for some of effect of breastfeeding and energy. Birthweight effect became smaller but still signif. Illness effect got smaller with each adjustment. Height & weight at 4 were strongly assoc with leg. All later child height pos assoc with leg. Height at 7, 11, 15 weakened effect of breastfeeding, energy intake and weight at 4. birthweight weakened only with height at 15. Illness reduced trunk, parent seperation < trunk. Weight and height at 4 weakend effect of father SES on trunk as well as parent seperation and illness. WEight and ht strongly pos assoc with trunk. All later height positive assoc with trunk. Parent seperation, birthweight, and weight at 4 unaltered with each later age height. Discussion: Leg length assoc with breastfeeding and energy. trunk with illness and parental seperation. Diet effects most evident on leg. Parental height may be a marker of SES. Being heavier at birth or at 4 or both pos effect on growth. Birthweight effect on both components of adult ht independ of prepub ht, suggesting prenatal growth has impact on absolute height, not on components. Weight at 4 may be a proxy for age of puberty as weight at 4 was strongly assoc with adult trunk, stronger for women. Thus, early maturers may have > trunk length but not leg. Leg assoc with breastfed and energy, but not illness and seperation, showing sensitivity of leg to early life environment. Trunk height appeared to be effected by longer term impacts while leg length assoc with nutrition and SES during infancy. Limitations: Leg length measurement error, mother reported father height.},
  document_type = {Article},
  owner         = {luke},
  source        = {Scopus},
  timestamp     = {2017.08.07},
}

@Article{Lawlor2002,
  author        = {Lawlor, D. and Ebrahim, S. and Davey Smith, G.},
  title         = {{T}he Association between Components of Adult Height and Type {II} Diabetes and Insulin Resistance: {B}ritish {W}omen's {H}eart and {H}ealth {S}tudy},
  journal       = {Diabetologia},
  year          = {2002},
  volume        = {45},
  number        = {8},
  pages         = {1097--1106},
  abstract      = {** Printed ** Aims/hypothesis. The aim of this study was to investigate the associations between components of adult height (leg length, trunk length, ratio of leg to trunk length) and Type II (non-insulin-dependent) diabetes mellitus and insulin resistance. Methods. A cross sectional study was carried out on 4286 women of age 60 to 79 years from 23 towns across England, Scotland and Wales. Results. Total height was weakly and inversely associated with diabetes but this masked differences in the association with leg and trunk length. Leg length was inversely associated with Type II diabetes [age adjusted odds ratio (95% CI) for diabetes for each standard deviation (4.3 cm) increase in leg length: 0.81 (0.73, 0.90)] whereas trunk length was not associated with diabetes [age adjusted odds ratio (95% CI) for diabetes for each standard deviation (3.6 cm) increase in trunk length: 1.05 (0.94, 1.18)]. Adjustment for potential confounding factors attenuated but did not remove the inverse association between leg length and the prevalence of diabetes: fully adjusted odds ratio (95% CI) per standard deviation increase in leg length was 0.87 (0.77, 0.98) and that per standard deviation increase in the ratio of leg to trunk length was 0.88 (0.78, 0.99). In non-diabetic women leg length was inversely associated with insulin resistance, whereas trunk length was positively associated with insulin resistance. Conclusion/interpretation. Leg length is an indicator of early childhood environmental circumstances, in particular of infant nutrition. These results suggest that poor infant nutrition is an important causal factor in the development of Type II diabetes and insulin resistance in later life.},
  comment       = {Intro: Short stature assoc with increased risk of glucose intolerance diabetes and gestational diabetes*. diabetes assoc with osteoporosis*, so vertebral collapse is possible. More age related height reductions could occur in people with chronic diseases compared to those disease free. Pleiotropic effects? intra-uterine or childhood environmental factors could be important*. Interruption of growth at any time during life course, esp during childhood = long torso, short legs*. Short legs indicator for poor childhood environmental conditions*. Osteoporotic shrinkage little effect on leg length. (* indicates a ref in the article) Methods: Women's heart and health study. Age 60-79, randomly selelcted from GP lis from 23 towns in England and Scotland and wales. n=4286 females (60 percent response rate). Questionnaire, nurse interview, phys exam, blood sample, standing & seated height, age of diagnosis (>30yrs=type 2 DM), >= 7mmol/l = diabetes, HOMA-IR, weight, waist circumference, adult social class (longest held position). Analysis included quartiles of height components, linear and logistic regression, multiple logistic regression (assoc height components and diabetes prevalence), multiple linear regression (assoc ht comp and insulin resist), HOMA scores and TAG conc were log normal, geometric means shown and natural log of conc were used in reg models. HOMA was only tested on non-diabetic women. Results: 218/4286 had doc diagnosis of diabetes (209 after exculsion), 168/3824 had blood glucose >=7mmol/l. Total with WHO defined diabetes was 375, prevalence 8.97 percent (CI 8.08, 9.92). Variables for statistical significance: leg length - inversely assoc with age, diabetes prev, HOMA, SBP, TAG, and BMI - assoc with HDL and social class (childhood and current) - no assoc with DBP, LDL, waist:hip ratio, and smoker; trunk length - inversely assoc with age, SBP, DBP, HDL, waist:hip ratio, and smoking status - assoc with HOMA and social class (childhood and current) - no assoc with diabetes prev, LDL, TAG, and BMI; height - inversely assoc with age, diabetes prev, HOMA, SBP, TAG, and BMI - assoc with social class (childhood and current) - no assoc with DBP, HDL, LDL, and waist:hip ratio; leg-trunk ratio - inversely assoc with diabetes prev, HOMA, TAG, and BMI - assoc with age, HDL, waist:hip ratio, smoking status, and social class (current and childhood) - no assoc with SBP, DBP, and LDL. Odds ratios: leg length 0.71-0.97 CI across multiple models and adjustments; trunk length 0.88-1.18 over models and adjustments; height 0.77-1.03 over models and adjustments; leg:trunk ratio 0.71-0.98 over models and adjustments. Regression coefficient of logged HOMA (similair format to odds ratio): leg length -0.08-0.02; trunk length 0.01-0.06; height -0.04-0.01; leg:trunk ratio -0.10--0.04. In summary, leg length associated with reduced risk of diabetes independent of diabetes risk factors, trunk length was not (odds ratio). In reg coeff, leg length was inversely assoc with IR, trunk was positively assoc with IR. Self-reported birthweight was positively assoc with leg length and trunk length (subgroup, those who indicated their birthweight n=1419). Discussion: Adult height is correlated to birthweight. Important determinant of leg length and trunk length is early childhood environment, especially infant nutrition. Increasing IR and decreasing leg length likely reflect poor chilldhood conditions. But positive association between trunk length and IR "harder to explain" but could be due to trunk length strongly assoc with pubertal growth, which is assoc with GH and IGF surges, leading to long term effects on IR. Limitations: 60% response rate. Almost entirely "Causasian", basically from a population sample of British women. Not necessarily generalisable to other populations.},
  document_type = {Article},
  owner         = {luke},
  source        = {Scopus},
  timestamp     = {2017.08.07},
}

@Article{DaveySmith2001,
  author        = {Davey Smith, G. and Greenwood, R. and Gunnell, D. and Sweetnam, P. and Yarnell, J. and Elwood, P.},
  title         = {{L}eg Length, Insulin Resistance, and Coronary Heart Disease Risk: {T}he {C}aerphilly Study},
  journal       = {J Epidemiol Community Health},
  year          = {2001},
  volume        = {55},
  number        = {12},
  pages         = {867--872},
  abstract      = {** Printed ** Background - Adult height has been inversely associated with coronary heart disease risk in several studies. The mechanism for this association is not well understood, however, and this was investigated by examining components of stature, cardiovascular disease risk factors and subsequent coronary heart disease in a prospective study. Methods - All men aged 45-59 years living in the town of Caerphilly, South Wales were approached, and 2512 (89%) responded and underwent a detailed examination, which included measurement of height and sitting height (from which an estimate of leg length was derived). Participants were followed up through repeat examinations and the cumulative incidence of coronary heart disease - both fatal and non-fatal - over a 15 year follow up period is the end point in this report. Results - Cross sectional associations between cardiovascular risk factors and components of stature (total height, leg length and trunk length) demonstrated that factors related to the insulin resistance syndrome - the homeostasis model assessment of insulin resistance, fasting triglyceride levels and total to HDL cholesterol ratio - were less favourable in men with shorter legs, while showing reverse or no associations with trunk length. Fibrinogen levels were inversely associated with leg length and showed a weaker association with trunk length. Forced expiratory volume in one second was unrelated to leg length but strongly positively associated to trunk length. Other risk factors showed little association with components of stature. The risk of coronary heart disease was inversely related to leg length but showed little association with trunk length. Conclusions - Leg length is the component of stature related to insulin resistance and coronary heart disease risk. As leg length is unrelated to lung function measures it is unlikely that these can explain the association in this cohort. Factors that influence leg length in adulthood - including nutrition, other influences on growth in early life, genetic and epigenetic influences - merit further investigation in this regard. The reported associations suggest that pre-adult influences are important in the aetiology of coronary heart disease and insulin resistance.},
  comment       = {Intro: Methods: Caerphilly, only men, 45-59yrs, in town of caerphilly and five adjacent villages, n=2512. BP, total cholesterol and HDL, TAG, insulin, glucose, fibrinogen, FEV1, own and fathers occupational social class, fathers unemployment, own employment, smoking. FEV1/ht^2. HOMA for 2031 who weren't diabetic. Sitting height. Stats: pearson corr coeff; age-standarized means and prev, GLM, multiple regression, TAG and HOMA were log normal, geomeans have been quoted, natural log used in regression models, multiple logistic reg for CHD and height variables. Results: Low correlation between leg and trunk, so consider them seperately. Short legs assoc with inc BMI, reverse for trunk. High leg-trunk ratio = lower BMI. Longer legs assoc with low CHD. Height/trunk not related to CHD after adjusting for age. Total cholestorel inverse related to all anthropometric measures. Insulin resistance syndrome - HOMA score, TAG, total/HDL ratio - assoc in opposite directions with leg and trunk, men with short legs higher HOMA, TAG, short trunk is opposite. All anthropometric measures related to social occupation class of current and fathers as well as father unemployment, esp strongly for leg. All anthropometric measures related to men being employed. Leg and leg-trunk ratio inverse assoc with CHD risk. Leg assoc with insulin resistance, attenuated slightly after adjustment, but no longer significant, similar to leg-trunk ratio. Adjusted for BMI. Discussion: With age, disease may kill off shorter/short legged people, thus after certain age, leg and height may not be assoc with disease. Shrinkage occurs mostly in trunk*. Potential inhibition of fetal development may underlie lower height. But birthweight, indicator of fetal development, similarly related to leg and trunk*. Thus, leg indicates early childhood environment. Leg assoc with adult disease not appear to reflect confounding by SES. Leg may indicate early childhood environment, but later puberty results in even more leg-trunk ratio, so potentially leg and leg-trunk ratio may not be a great indicator of childhood conditions. Limitations: Only men, cross-sectional (?)},
  document_type = {Article},
  owner         = {luke},
  source        = {Scopus},
  timestamp     = {2017.08.07},
}

@Article{Hales2001,
  author        = {Hales, C. N. and Barker, D. J. P.},
  title         = {{T}he Thrifty Phenotype Hypothesis},
  journal       = {Br Med Bull},
  year          = {2001},
  volume        = {60},
  pages         = {5--20},
  abstract      = {** Printed ** The thrifty phenotype hypothesis proposes that the epidemiological associations between poor fetal and infant growth and the subsequent development of type 2 diabetes and the metabolic syndrome result from the effects of poor nutrition in early life, which produces permanent changes in glucose-insulin metabolism. These changes include reduced capacity for insulin secretion and insulin resistance which, combined with effects of obesity, ageing and physical inactivity, are the most important factors in determining type 2 diabetes. Since the hypothesis was proposed, many studies world-wide have confirmed the initial epidemiological evidence, although the strength of the relationships has varied from one study to another. The relationship with insulin resistance is clear at all ages studied. Less clear is the relationship with insulin secretion. The relative contribution of genes and environment to these relationships remains a matter of debate. The contributions of maternal hyperglycaemia and the trajectory of postnatal growth need to be clarified.},
  comment       = {Intro: Thrifty phenotype proposes that environmental factors are dominant cause of t2 diabetes. Poor development of pancreatic beta cell mass and function (islet of langerhans vasculature and possibly innveration) key elements linking poor early nutrition with diabetes. Fetal malnutrition led to IR. Altered growth permanently changes structure and function of body. Poor capacity for insulin secretion not bad for those who remain poorly nourished and thin. Gluc intolerance may be triggered by pos calorie balance. Key role of protein, but other nutrients important. Pathological changes from malnutrition as fetus only occur with other factors present, ie in an obesogenic environment. Effect of birth weight on diabetes risk is a continuum. In epidem, poor early growth assoc with IR, not insulin secretion. Obesity during childhood has greater impact on MetS than obesity in adulthood. Those who were small at birth, small up to age 7, but rapidly gained weight afterward were the most at risk of getting diabetes*. Accelerated weight gain had a greater impact on increased risk of diabetes among those who weighed 3000g or less at birth*. IR was assoc with thinness at birth, thinness at age 7 and overweight at adult*. Potential explanation is that fetal growth restriction may reduce pancreatic cell number and accelerated growth in childhood may place excessive demand on the small cell mass. Famine in holland during WW2 lead to IR with those born during the famine*. This famine was unique in that the famine was intense deprivation followed by nutrition restoration. In contrast, in Leningrad during the siege, nutrient intake was low, but following the siege, nutrient intake remained low. Therefore, there may not have been accelerated weight gain in the Russian childhood born during that time. Mothers diet can alter metabolism without altering birthweight. Early fetal famine exposure altered lipid metabolism, later fetal famine exposure altered gluc-insulin metabolism. Reduced maternal protein in animal models leads to similar phenotypes seen with MetS and diabetes in humans. In rats, protein restricted fetus's who had accelerated postnatal growth died young*. Those born to normal mothers but then suckled on a poor diet then weaned onto a normal diet did not have accelerated weight gain, but remained growth restricted*. Suckling may program appetite. Poorly nourished mother essentially gives a nutritional forecast to the fetus. The adaptations only become detrimental when postnatal environment is not as forecasted. Similar observations have been seen with cold exposure. Low maternal protein intake leads to incr hepatic gluconeogen, enhanced release of FA from intra-ab adipose tissue, resist to ketosis, incr express of insulin receptors with enhanced gluc uptake by adipose tissue*. These could be an advantage to those in poor nutrient envir. Discussion: Maternal nutrition provides a forecast to the fetus for the nutritional environment. When the forecast is wrong, adult disease can occur. IE: Poor fetal and childhood nutrition followed by accelerated weight gain in mid-to-late childhood leads to incr risk of diabetes. Limitations: Only looked at birthweight/weight, not stature.},
  document_type = {Article},
  owner         = {luke},
  source        = {Scopus},
  timestamp     = {2017.08.07},
}

@Article{Gluckman2007,
  author        = {Gluckman, P. D. and Hanson, M. A. and Beedle, A. S.},
  title         = {{E}arly Life Events and Their Consequences for Later Disease: {A} Life History and Evolutionary Perspective},
  journal       = {Am J Hum Biol},
  year          = {2007},
  volume        = {19},
  number        = {1},
  pages         = {1--19},
  abstract      = {** Printed ** Biomedical science has little considered the relevance of life history theory and evolutionary and ecological developmental biology to clinical medicine. However, the observations that early life influences can alter later disease risk - the "developmental origins of health and disease" (DOHaD) paradigm - have led to a recognition that these perspectives can inform our understanding of human biology. We propose that the DOHaD phenomenon can be considered as a subset of the broader processes of developmental plasticity by which organisms adapt to their environment during their life course. Such adaptive processes allow genotypic variation to be preserved through transient environmental changes. Cues for plasticity operate particularly during early development; they may affect a single organ or system, but generally they induce integrated adjustments in the mature phenotype, a process underpinned by epigenetic mechanisms and influenced by prediction of the mature environment. In mammals, an adverse intrauterine environment results in an integrated suite of responses, suggesting the involvement of a few key regulatory genes, that resets the developmental trajectory in expectation of poor postnatal conditions. Mismatch between the anticipated and the actual mature environment exposes the organism to risk of adverse consequences - the greater the mismatch, the greater the risk. For humans, prediction is inaccurate for many individuals because of changes in the postnatal environment toward energy-dense nutrition and low energy expenditure, contributing to the epidemic of chronic noncommunicable disease. This view of human disease from the perspectives of life history biology and evolutionary theory offers new approaches to prevention, diagnosis and intervention. {\copyright} 2006 Wiley-Liss, Inc.},
  comment       = {Intro: Developmental origins of health and disease (DOHD) represents the fundamental processes of developmental plasticity, which mammals adjust their life history strategy in response to environmental cues during early development. Adult organism would be suited to environment it adjusts to, but if the environment is different, health may be compromised. Offspring of those in the dutch famine did not have reduced birthweight, but did have incr risk of obesity*. Genetic variation will play a role in determining sensitivity to envir stimuli. Fetus adapts to maternal undernourishment by growth retardation, becoming better equipped to deal with deficient environment. This reduced growth probably occurs through decr insulin sensitivity. However, this change in insulin sensitivity only has consequences later in life. Intrauterine growth restriction and mild prematurity may be immediately advantageous adaptations. Reduced growth likely caused by reduced nutritional supply from mother. Fetus responds by reducing anabolic demand by reducing plasma insulin and plasma and tissue IGF1 (two of best documented growth promoters*). Redistribution of fetal blood to develop critical organs. Small birth higher risk of neonatal death. Prematurity similar to IUGR in that a poor or hazardous maternal environment may prompt the fetus to being born early to escape abnormal intrauterine environment, with incr risk of postnatal morbidity and mortality*. Predictive adaptive responses. Animals born early in the summer undergo rapid growth to breed early, those born later are growth restricted and overwinter as prepubertal animals of subadult size. Predictive adaptive hypothesis states that the maternal environment predicts the environment outside of the womb and the fetus adapts to be best suit to the environment, but when a mismatch occurs, later health consequences may occur. This PAH hypothesis may be the result of epigenetics. This phenomenon may be more of a physiological plasticity rather than pathology. This hypothesis allows changes to occur faster than classical genetics would allow. Fetal nutrition not the same as maternal dietary intake. Fetal nutrition depends on her energy expenditure, her nutritional environment, her behaviour, her metabolic and cardiovascular function, placental health and function, and fetal endocrine status. Maternal constraint - nongenetic characteristics that limit fetal growth. IE: size of fetus dependent on size of mother. Evidence that shows that mothers have receptors in placenta that clear fetal IGF*. Non-genetic factors (including maternal constraint) account for 50% of the variance of birth size. Maternal height and pelvic size are tightly correlated, thus maternal constraint is key to limiting fetal growth and allowing successful reproduction. Also, PAH states that maternal constraint includes nutrient allocation by the pregnant mother and environmental stressors that the mother may face. Greater the mismatch, the greater the risk of disease. Can be applied to rapidly developing nations. Developmental plasticity acts to incr phenotypic variation, allowing shift in positioning of individuals physiology within reaction norm to optimize its phenotype for a particular environment and incre its fitness (survival & reproductive). Life-history theory based on consideration of optimal allocation of resources to somatic effort and reproductive effort to maximize reproductive fitness. Those born smaller are essentially diverting their resources away from somatic (growth and maintenance) efforts to reproductive efforts, thus having a propensity to die at a younger age*. This diverting of resources is likely to result in removing of redundancies, such as reduced nephron number*, or fewer neurons in some areas of the brain*. The fetus predicts a shorter life, so invests less in musculoskeletal growth and having the propensity to store fat and for peripheral IR (both seen in humans)*. Good nutrition during childhood leads to early puberty, likewise, LBW accelerates sexual maturation if postnatal nutrition allows*. This is similar to antagonistic pleitropy (genes giving benefit to early life but harmful effects later in life will be selected for because of the reproductive advantage)*. IR does not appear until well after birth in small for gestational age babies*. During human evolution, this forecasting might have been very advantageous to the individual, however in the current global environment when changes occurs very quickly, the forecasting may actually be of harm to the individual. As a result, we are still impacted by maternal constraint even though the nutritional environment is becoming increasingly enriched in developed and recented developed countries. Discussion: Limitations:},
  document_type = {Article},
  owner         = {luke},
